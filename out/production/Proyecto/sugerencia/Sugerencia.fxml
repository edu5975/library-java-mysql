<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import sample.SearchComboBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sugerencia.SugerenciaController"
            prefHeight="400.0" prefWidth="600.0">

    <center>
        <VBox alignment="CENTER" spacing="5">
            <GridPane alignment="CENTER" hgap="5" vgap="5">
                <Label text="Titulo" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="txtTitulo" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label text="Autor" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="txtAutor" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label text="Sinopsis" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <TextArea fx:id="txtContenido" GridPane.columnIndex="1" GridPane.rowIndex="6" wrapText="true"/>
            </GridPane>
            <HBox alignment="CENTER">
                <CheckBox fx:id="chkArchivo" />
                <Label text="Archivo" />
                <TextField fx:id="txtArchivo" disable="true"/>
                <Button text="Seleccionar"  fx:id="btnArchivo"/>
            </HBox>
            <Button text="Enviar sugerencia" fx:id="btnEnviar"/>
        </VBox>
    </center>


</BorderPane>
