<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import de.jensd.fx.glyphs.icons525.Icons525View?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="categoria.CategoriaController"
            prefWidth="200"
            prefHeight="700">

    <center>
        <VBox alignment="CENTER" spacing="15">
            <HBox alignment="CENTER">
                <Label text="Nombre de Categoria"/>
                <TextField fx:id="CatNom" prefWidth="200"/>
            </HBox>
            <HBox alignment="CENTER" spacing="5">
                <Button fx:id="btnAgregar" text="Agregar"/>
                <Button fx:id="btnModificar" text="Modificar"/>
                <Button fx:id="btnBorrar" text="Borrar"/>
            </HBox>
            <ComboBox  fx:id="cmbCategoria" promptText="Elije la Categoria">
            </ComboBox>

            <HBox alignment="CENTER" spacing="5">
                <Label text="Nombre de SubCategoria"/>
                <TextField fx:id="SubNom" prefWidth="200"/>
            </HBox>
            <HBox alignment="CENTER" spacing="5">
                <Button fx:id="btnAgregarSub" text="Agregar"/>
                <Button fx:id="btnModificarSub" text="Modificar"/>
                <Button fx:id="btnBorrarSub" text="Borrar"/>
            </HBox>
            <HBox alignment="CENTER" spacing="6">
                <TableView fx:id="tblSubCategorias" prefHeight="250" prefWidth="250"/>
            </HBox>
        </VBox>
    </center>


</BorderPane>
