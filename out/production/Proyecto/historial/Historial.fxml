<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import sample.SearchComboBox?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="historial.HistorialController"
            prefHeight="400.0" prefWidth="600.0">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <top>
        <SearchComboBox fx:id="cbxUsuarios" promptText="Seleccione el usuario"/>
    </top>

    <center>
        <ScrollPane>
            <GridPane fx:id="grpLibros" hgap="5" vgap="5"></GridPane>
        </ScrollPane>
    </center>

    <bottom>
        <HBox fx:id="hboxBotones" alignment="CENTER" spacing="5" />
        <Button fx:id="btn" visible="false" />
    </bottom>


</BorderPane>

